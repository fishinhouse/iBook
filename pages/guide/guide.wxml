<swiper indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" style="height:620px;">
  <block wx:for="{{imgUrls}}">
    <swiper-item >
      <image mode="widthFix" src="{{item}}" class="slide-image" style="display:inline;" />
    </swiper-item>
  </block>
</swiper>
